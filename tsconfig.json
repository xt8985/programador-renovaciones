{
  "compilerOptions": {
    "outDir": ".build",
    "target": "es6", // Define el target JavaScript (ES6 es común)
    "module": "commonjs", // Usar CommonJS para módulos (para Node.js)
    "strict": true, // Activa todas las comprobaciones estrictas
    "esModuleInterop": true, // Permite la interoperabilidad de importaciones entre módulos
    "skipLibCheck": true, // Ignora la comprobación de tipos en los archivos de la librería
    "forceConsistentCasingInFileNames": true // Garantiza que el nombre de los archivos sea consistente
  },
  "include": [
    "src/**/*.ts" // Incluye todos los archivos .ts en la carpeta src
  ],
  "exclude": [
    "node_modules" // Excluye la carpeta node_modules
  ]
}